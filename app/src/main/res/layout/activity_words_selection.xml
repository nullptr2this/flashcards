<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_flash_card"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="32dp"
            android:text="Pick a word group to work on."
            android:textColor="@android:color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button_group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/background_button"
            android:text="Fry&apos;s 1st 100"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/background_button"
            android:text="Fry&apos;s 2nd 100"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_group_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/background_button"
            android:text="Fry&apos;s 3rd 100"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_group_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/background_button"
            android:text="Fry&apos;s 4th 100"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>